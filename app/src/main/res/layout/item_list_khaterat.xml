<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_toolbar">

        <TextView
            android:id="@+id/lbl_titleKhatere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان خاطره :"
            android:textColor="@color/lbl_List_item"
            android:textSize="@dimen/lbls"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_titleKhatere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="عملیات والفجر"
            android:textColor="@color/txt_List_item"
            android:textSize="@dimen/txt"
            app:layout_constraintBottom_toBottomOf="@+id/lbl_titleKhatere"
            app:layout_constraintRight_toLeftOf="@+id/lbl_titleKhatere"
            app:layout_constraintTop_toTopOf="@+id/lbl_titleKhatere" />

        <TextView
            android:id="@+id/lbl_ravi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="راوی :"
            android:textColor="@color/lbl_List_item"
            android:textSize="@dimen/lbls"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_titleKhatere" />

        <TextView
            android:id="@+id/txt_ravi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="رزمنده محسن فرجی"
            android:textColor="@color/txt_List_item"
            android:textSize="@dimen/txt"
            app:layout_constraintBottom_toBottomOf="@+id/lbl_ravi"
            app:layout_constraintRight_toLeftOf="@+id/lbl_ravi"
            app:layout_constraintTop_toTopOf="@+id/lbl_ravi" />

        <TextView
            android:id="@+id/lbl_khatere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="16dp"
            android:text="خاطره :"
            android:textColor="@color/lbl_List_item"
            android:textSize="@dimen/lbls"
            app:layout_constraintBottom_toBottomOf="@+id/txt_khatere"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_khatere" />

        <TextView
            android:id="@+id/txt_khatere"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="@dimen/txt"
            app:layout_constraintBottom_toTopOf="@+id/btn_edameMatlab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/lbl_khatere"
            app:layout_constraintTop_toBottomOf="@+id/txt_ravi" />

        <Button
            android:id="@+id/btn_edameMatlab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ادامه مطلب >>"
            android:textStyle="bold"
            android:textColor="@color/txt_List_item"
            android:background="@drawable/background_btns_list"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>